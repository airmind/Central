<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/dialog_select_frame_type_left_imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/btn_left"
        android:scaleType="fitCenter"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/dialog_select_frame_type_viewPager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"/>

    <ImageView
        android:id="@+id/dialog_select_frame_type_right_imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/btn_right"
        android:scaleType="fitCenter"/>

</LinearLayout>